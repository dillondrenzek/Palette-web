active-color-output,
color-input
	display block

.container
	position: absolute;
	top 0
	bottom 0
	left 15px
	right 15px
	display flex
	flex-direction column
	flex-wrap nowrap
	justify-content center

	header
		flex 0 0 65px

	section
		flex 1 0 auto
		display flex
		flex-direction column
		flex-wrap nowrap

		active-color-output
			flex 1 0 auto
			display flex
			flex-direction row
			flex-wrap nowrap
			justify-content center
			align-items stretch

			div
				flex 1 0 auto

	footer
		flex 0 0 50px



