:host
    display: block;
    position: relative;
    font-size: 24px;
    font-weight: 600;

    .wrapper
        position: relative;
        top: 50%;
        transform: translateY(-50%);

    form.form-group
        margin: 0;
        padding: 0;

    .color-component
        margin-bottom: 10px;
        label
            float: left;
            width: 20%;
            margin: 0;
            font-size: inherit;
            padding-right: 15px;
            display: inline-block;

        input
            float: left;
            width: 80%;
            background-color: white;
            font-size: inherit;
            border: 0;
            display: inline-block;
